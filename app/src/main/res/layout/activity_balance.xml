<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.battery.BalanceActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/balance_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00BBD3"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BBD3"
        android:textColor="#FFF"
        android:text="账户余额(元)"/>
    <TextView
        android:padding="@dimen/activity_vertical_margin"
        android:id="@+id/balance_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BBD3"
        android:textSize="70sp"
        android:textColor="#FFF"
        android:text="1,100.00"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#EEEEEE" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:padding="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tint="#BE9117"
            android:src="@drawable/ic_monetization_on_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="#222"
            android:paddingLeft="8dp"
            android:text="充值"
            android:textSize="18sp" />

        <ImageView
            android:tint="#999"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_keyboard_arrow_right_black_36dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

</LinearLayout>
